<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <link rel="stylesheet" href="http://localhost:3000/css/style.css" />
  </head>
  <body>
    <div>
        <form action="/user/<%= user.id %>?_method=PUT" method="POST">
          <input type="text" placeholder="id" name="id" value = <%= user.id%> />
          <input type="text" placeholder="first_name" name="first_name" value = <%= user.first_name%> />
          <input type="text" placeholder="email" name="email" value = <%= user.email%> />
          <input type="text" placeholder="password" name="password" value = <%= user.password%> />
          <input type="submit" value = "update" />
        </form>
      </div> 
   </body>
</html>
